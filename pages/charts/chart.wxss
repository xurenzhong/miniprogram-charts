/* chart.wxss */
.texttip {
  color: white;
  font-size: 12px;
  padding-left: 10px;
  padding-right: 10px;
  margin-top: 15px;
}

.echart_chartline {
  right: 10px;
  height: 150px;
  width: 325px;
}

.echart_chartpie {
    width: 100%;
    height: 60%;
}

.piecontainer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 150px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.bpm {
  color: #999;
  font-size: 8pt;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bpm1 {
  color: #FFA400;
  font-size: 12pt;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bpm2 {
  color: #333;
  font-size: 11pt;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 10%;
  left: 0;
  right: 0;
}

.pietitle {
  color: white;
}

page {
  background-color: #142756;
}