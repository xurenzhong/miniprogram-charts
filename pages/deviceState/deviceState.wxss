page {
  height: 100%;
  width: 100%;
}

.devicecontainer {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.remind {
  width: 100%;
  display: flex;
  flex-direction: row;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* align-items: center; */
  align-content: space-around;

}

.remindbg {
  background-color: rgba(216, 218, 219, 1);
  height: 62px;
  width: 148px;
  border-radius: 31px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.remindbg_hide {
  background-color: white;
  height: 62px;
  width: 148px;
  border-radius: 31px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.remindcontent {
  background-color: rgba(226, 53, 73, 1);
  border-radius: 22px;
  height: 44px;
  width: 128px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.warncontent {
  background-color: rgba(241, 156, 68, 1);
  border-radius: 22px;
  height: 44px;
  width: 128px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.remindtext {
  color: white;
  font-size: 18px;
}

.tempbg {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.temp_image {
  width: 18px;
  height: 27px;
}

.temp_text {
  display: flex;
  height: 27px;
  font-size: 12px;
  color: black;
  text-align: end;
  align-items: flex-end;
}

.temp_content {
  margin-bottom: 0px;
}

.device {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.water_levelbg {
  height: 36px;
  display: flex;
  align-items: flex-start;
}

.water_level {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.water_state {
  width: 15.5px;
  height: 165px;
}

.water_text {
  font-size: 12px;
}

.deviceimagel {
  margin: 15px;
  height: 170px;
  width: 85px;
}
.deviceimager {
  height: 170px;
  width: 180px;
}

.botremindcontent {
  background-color: rgba(43, 124, 224, 1);
  border-radius: 19px;
  height: 38px;
  width: 128px;
  display: flex;
  justify-content: center;
  align-items: center;
}